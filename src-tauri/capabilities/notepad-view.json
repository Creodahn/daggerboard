{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "notepad-view",
  "description": "Capability for the campaign notepad windows",
  "windows": ["notepad-*", "notepad-new-*"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-create",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:window:allow-set-focus",
    "core:window:allow-set-title",
    "core:window:allow-show",
    "core:window:allow-unminimize",
    "core:webview:default",
    "core:webview:allow-create-webview-window",
    "core:event:allow-listen",
    "core:event:allow-emit-to",
    {
      "identifier": "core:event:allow-listen",
      "allow": [
        { "event": "campaign-note-created" },
        { "event": "campaign-note-updated" },
        { "event": "campaign-note-deleted" },
        { "event": "campaign-notes-list-updated" },
        { "event": "current-campaign-changed" }
      ]
    }
  ]
}
