{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "countdown-alert",
  "description": "Capability for countdown completion alert windows",
  "windows": ["countdown-alert-*"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-close",
    "core:window:allow-destroy",
    "core:event:default",
    "core:event:allow-emit",
    "core:event:allow-listen",
    {
      "identifier": "core:event:allow-listen",
      "allow": [
        { "event": "app://window-close-request" }
      ]
    }
  ]
}
