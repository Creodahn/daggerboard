{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "settings-view",
  "description": "Capability for the campaign settings window",
  "windows": ["settings-view"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:window:allow-close",
    "core:window:allow-destroy",
    {
      "identifier": "core:event:allow-listen",
      "allow": [
        { "event": "campaign-settings-updated" },
        { "event": "current-campaign-changed" },
        { "event": "app://window-close-request" }
      ]
    }
  ]
}
