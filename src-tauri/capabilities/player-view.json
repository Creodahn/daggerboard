{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "player-view",
  "description": "Read-only capability for the player view window",
  "windows": ["player-view"],
  "permissions": [
    "core:default",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:window:allow-close",
    "core:window:allow-destroy",
    {
      "identifier": "core:event:allow-listen",
      "allow": [
        { "event": "trackers-updated" },
        { "event": "fear-level-updated" },
        { "event": "entities-updated" },
        { "event": "dice-roll-shared" },
        { "event": "dice-roll-hidden" },
        { "event": "app://window-close-request" }
      ]
    }
  ]
}
